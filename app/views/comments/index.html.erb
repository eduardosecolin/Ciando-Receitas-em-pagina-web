<div class="container">
 <% if @recipe.comments.size > 0 %>
   <div class="jumbotron">
    <ul>
     <% @comments.each do |comentario| %>
        <li>
         <p>
          <%= comentario.name %> <small class="small_font_rating"><%= pluralize(comentario.rating, 'estrela', 'estrelas')%></small>
          <small class="small_font"> - <%= time_ago_in_words(comentario.created_at) %> atrás </small>
         </p>
         <p>
           <%= comentario.comment %>
         </p>
        </li>
         <% end %>
    </ul>
   </div>
  <% else %>
    <div class="jumbotron">
       <h3>Não existe comentários!</h3>
    </div>
  <% end %>

   <%= link_to recipes_path, class:'btn btn-link' do %>
    <i class="glyphicon glyphicon-home"> Receitas</i>
   <% end %> 

</div>