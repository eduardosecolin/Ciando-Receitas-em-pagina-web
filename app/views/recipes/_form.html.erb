<%= form_for(@recipe) do | formulario | %>
  <%= render 'layouts/errors' %>
    
        <p class="form-group">
          <%= formulario.label :Nome %></br>
          <%= formulario.text_field :name, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Ingredientes %></br>
          <%= formulario.text_area :stuff, cols: 20, rows: 5, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Tipo %></br>
          <%= formulario.select :kind, Recipe::KIND, prompt:'Escolha o tipo', class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Calorias %></br>
          <%= formulario.number_field :calories, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Modo_de_Preparo %></br>
          <%= formulario.text_area :prepare_mode, cols: 20, rows: 5, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Tempo_de_Preparo %></br>
          <%= formulario.time_select :duration, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Porções %></br>
          <%= formulario.text_field :portion, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Custos %></br>
          <%= formulario.number_field :cost, class:"form-control" %>
        </p>
        <p class="form-group">
          <%= formulario.label :Poster %></br>
          <%= formulario.text_field :poster, placeholder: ".GIF, .JPEG, .JPG ou .PNG", class:"form-control" %>
        </p>
        <p>
          <%= formulario.submit class:'btn btn-primary' %>
          <%= link_to 'Cancelar', root_path, class:'btn btn-default' %>
        </p>
       <% end %> 